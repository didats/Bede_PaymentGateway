<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="bede_payment_logs" resource="default" engine="innodb" comment="Bede Payment Logs Table">
        <column xsi:type="bigint" name="id" padding="20" unsigned="true" nullable="false" identity="true" comment="Log ID"/>
        <column xsi:type="varchar" name="type" length="255" nullable="false" comment="Type (response, request)"/>
        <column xsi:type="varchar" name="endpoint" length="255" nullable="false" comment="Endpoint"/>
        <column xsi:type="varchar" name="method" length="255" nullable="false" comment="Method"/>
        <column xsi:type="int" name="status" padding="11" nullable="false" comment="Status"/>
        <column xsi:type="bigint" name="order_id" padding="20" unsigned="true" nullable="true" comment="Order ID"/>
        <column xsi:type="bigint" name="transaction_id" padding="20" unsigned="true" nullable="true" comment="Transaction ID"/>
        <column xsi:type="datetime" name="executed_at" nullable="false" comment="Executed At"/>
        <column xsi:type="text" name="curl_command" nullable="true" comment="cURL Command"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="false" comment="Created At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>